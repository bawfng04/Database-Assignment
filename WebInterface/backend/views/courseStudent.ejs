<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Course Student</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Course Student</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/coursestudent" id="sortForm">
    <input type="text" name="search" placeholder="Search by Course ID" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="CourseID" <%= sort === 'CourseID' ? 'selected' : '' %>>Course ID</option>
      <option value="StudentID" <%= sort === 'StudentID' ? 'selected' : '' %>>Student ID</option>
      <option value="CourseProgress" <%= sort === 'CourseProgress' ? 'selected' : '' %>>Course Progress</option>
      <option value="ReviewScore" <%= sort === 'ReviewScore' ? 'selected' : '' %>>Review Score</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>CourseID</th>
        <th>StudentID</th>
        <th>CourseProgress</th>
        <th>ReviewScore</th>
        <th>ReviewContent</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% courseStudent.forEach(cs => { %>
        <tr>
          <td><%= cs.CourseID %></td>
          <td><%= cs.StudentID %></td>
          <td><%= cs.CourseProgress %></td>
          <td><%= cs.ReviewScore %></td>
          <td><%= cs.ReviewContent %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>