<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Cart</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Cart</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/cart" id="sortForm">
    <input type="text" name="search" placeholder="Search by Cart ID" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="CartID" <%= sort === 'CartID' ? 'selected' : '' %>>Cart ID</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>CartID</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% cart.forEach(item => { %>
        <tr>
          <td><%= item.CartID %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>