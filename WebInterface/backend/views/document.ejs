<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Document</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Document</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/document" id="sortForm">
    <input type="text" name="search" placeholder="Search by Document Title" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="DocumentID" <%= sort === 'DocumentID' ? 'selected' : '' %>>Document ID</option>
      <option value="CourseID" <%= sort === 'CourseID' ? 'selected' : '' %>>Course ID</option>
      <option value="ChapterName" <%= sort === 'ChapterName' ? 'selected' : '' %>>Chapter Name</option>
      <option value="DocumentTitle" <%= sort === 'DocumentTitle' ? 'selected' : '' %>>Document Title</option>
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>DocumentID</th>
        <th>CourseID</th>
        <th>ChapterName</th>
        <th>DocumentAuthor</th>
        <th>DocumentTitle</th>
        <th>DocumentSize</th>
        <th>DocumentType</th>
        <th>DocumentContent</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% documents.forEach(doc => { %>
        <tr>
          <td><%= doc.DocumentID %></td>
          <td><%= doc.CourseID %></td>
          <td><%= doc.ChapterName %></td>
          <td><%= doc.DocumentAuthor %></td>
          <td><%= doc.DocumentTitle %></td>
          <td><%= doc.DocumentSize %></td>
          <td><%= doc.DocumentType %></td>
          <td><%= doc.DocumentContent %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>