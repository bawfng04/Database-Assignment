<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Category</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Category</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/category" id="sortForm">
    <input type="text" name="search" placeholder="Search by Category Name" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="CategoryID" <%= sort === 'CategoryID' ? 'selected' : '' %>>Category ID</option>
      <option value="CategoryName" <%= sort === 'CategoryName' ? 'selected' : '' %>>Category Name</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>CategoryID</th>
        <th>CategoryName</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% category.forEach(cat => { %>
        <tr>
          <td><%= cat.CategoryID %></td>
          <td><%= cat.CategoryName %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>