<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Admin</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/admin" id="sortForm">
    <input type="text" name="search" placeholder="Search by Admin ID" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="AdminID" <%= sort === 'AdminID' ? 'selected' : '' %>>Admin ID</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>AdminID</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% admin.forEach(adminUser => { %>
        <tr>
          <td><%= adminUser.AdminID %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>