<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Orders</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Orders</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/orders" id="sortForm">
    <input type="text" name="search" placeholder="Search by Order ID" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="OrderID" <%= sort === 'OrderID' ? 'selected' : '' %>>Order ID</option>
      <option value="OrderPaymentStatus" <%= sort === 'OrderPaymentStatus' ? 'selected' : '' %>>Order Payment Status</option>
      <option value="OrderDate" <%= sort === 'OrderDate' ? 'selected' : '' %>>Order Date</option>
      <option value="OrderTotalAmount" <%= sort === 'OrderTotalAmount' ? 'selected' : '' %>>Order Total Amount</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>OrderID</th>
        <th>OrderPaymentStatus</th>
        <th>OrderDate</th>
        <th>OrderTotalAmount</th>
        <th>CartID</th>
        <th>PaymentCode</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% orders.forEach(order => { %>
        <tr>
          <td><%= order.OrderID %></td>
          <td><%= order.OrderPaymentStatus %></td>
          <td><%= order.OrderDate %></td>
          <td><%= order.OrderTotalAmount %></td>
          <td><%= order.CartID %></td>
          <td><%= order.PaymentCode %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>