<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lesson</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Lesson</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/lesson" id="sortForm">
    <input type="text" name="search" placeholder="Search by Lesson Title" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="LessonOrder" <%= sort === 'LessonOrder' ? 'selected' : '' %>>Lesson Order</option>
      <option value="CourseID" <%= sort === 'CourseID' ? 'selected' : '' %>>Course ID</option>
      <option value="ChapterName" <%= sort === 'ChapterName' ? 'selected' : '' %>>Chapter Name</option>
      <option value="LessonTitle" <%= sort === 'LessonTitle' ? 'selected' : '' %>>Lesson Title</option>
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>LessonOrder</th>
        <th>CourseID</th>
        <th>ChapterName</th>
        <th>LessonTitle</th>
        <th>LessonContent</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% lessons.forEach(lesson => { %>
        <tr>
          <td><%= lesson.LessonOrder %></td>
          <td><%= lesson.CourseID %></td>
          <td><%= lesson.ChapterName %></td>
          <td><%= lesson.LessonTitle %></td>
          <td><%= lesson.LessonContent %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>