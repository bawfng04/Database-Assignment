<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Lesson</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Lesson</h1>
  <table>
    <thead>
      <tr>
        <th>LessonOrder</th>
        <th>CourseID</th>
        <th>ChapterName</th>
        <th>LessonTitle</th>
        <th>LessonContent</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% lessons.forEach(lesson => { %>
        <tr>
          <td><%= lesson.LessonOrder %></td>
          <td><%= lesson.CourseID %></td>
          <td><%= lesson.ChapterName %></td>
          <td><%= lesson.LessonTitle %></td>
          <td><%= lesson.LessonContent %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
  <button onclick="window.location.href='/'">Go Back</button>
</body>
</html>