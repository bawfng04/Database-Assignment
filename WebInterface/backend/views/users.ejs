<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Users</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Users</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/users" id="sortForm">
    <input type="text" name="search" placeholder="Search by Username" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="UsernameID" <%= sort === 'UsernameID' ? 'selected' : '' %>>Username ID</option>
      <option value="UserEmail" <%= sort === 'UserEmail' ? 'selected' : '' %>>User Email</option>
      <option value="UserPhone" <%= sort === 'UserPhone' ? 'selected' : '' %>>User Phone</option>
      <option value="Username" <%= sort === 'Username' ? 'selected' : '' %>>Username</option>
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>UsernameID</th>
        <th>UserEmail</th>
        <th>UserPhone</th>
        <th>UserPassword</th>
        <th>UserAddress</th>
        <th>UserImage</th>
        <th>Username</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.UsernameID %></td>
          <td><%= user.UserEmail %></td>
          <td><%= user.UserPhone %></td>
          <td><%= user.UserPassword %></td>
          <td><%= user.UserAddress %></td>
          <td><%= user.UserImage %></td>
          <td><%= user.Username %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>