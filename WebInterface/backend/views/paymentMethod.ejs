<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment Method</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Payment Method</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/paymentmethod" id="sortForm">
    <input type="text" name="search" placeholder="Search by Payment Code" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="PaymentCode" <%= sort === 'PaymentCode' ? 'selected' : '' %>>Payment Code</option>
      <option value="PaymentAmount" <%= sort === 'PaymentAmount' ? 'selected' : '' %>>Payment Amount</option>
      <option value="PaymentDate" <%= sort === 'PaymentDate' ? 'selected' : '' %>>Payment Date</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>PaymentCode</th>
        <th>PaymentAmount</th>
        <th>PaymentDate</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% paymentMethods.forEach(payment => { %>
        <tr>
          <td><%= payment.PaymentCode %></td>
          <td><%= payment.PaymentAmount %></td>
          <td><%= payment.PaymentDate %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>