<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Coupon</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Edit Coupon</h1>
<% if (typeof message !== 'undefined') { %>
  <div class="alert"><%= message %></div>
<% } %>
  <form method="POST" action="/coupon/edit/<%= coupon.CouponID %>">
  <label for="CouponTitle">Title:</label>
  <input type="text" id="CouponTitle" name="CouponTitle" value="<%= coupon.CouponTitle %>" required>
  <label for="CouponValue">Value:</label>
  <input type="number" id="CouponValue" name="CouponValue" value="<%= coupon.CouponValue %>" required>
  <label for="CouponType">Type:</label>
  <select id="CouponType" name="CouponType" required>
    <option value="percent" <%= coupon.CouponType === 'percent' ? 'selected' : '' %>>Phần trăm</option>
    <option value="fixed" <%= coupon.CouponType === 'fixed' ? 'selected' : '' %>>Giá trị</option>
  </select>
  <label for="CouponStartDate">Start Date:</label>
  <input type="date" id="CouponStartDate" name="CouponStartDate" value="<%= coupon.CouponStartDate ? coupon.CouponStartDate.toISOString().split('T')[0] : '' %>" required>
  <label for="CouponExpire">End Date:</label>
  <input type="date" id="CouponExpire" name="CouponExpire" value="<%= coupon.CouponExpire ? coupon.CouponExpire.toISOString().split('T')[0] : '' %>" required>
  <label for="CouponMaxDiscount">Max Discount:</label>
  <input type="number" id="CouponMaxDiscount" name="CouponMaxDiscount" value="<%= coupon.CouponMaxDiscount %>" placeholder="Max Discount">
  <button type="submit">Update</button>
</form>
  <button onclick="window.location.href='/coupon'">Go Back</button>
</body>
</html>