<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Courses</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Courses</h1>
   <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/courses" id="sortForm">
    <input type="text" name="search" placeholder="Search by course name" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="CourseID" <%= sort === 'CourseID' ? 'selected' : '' %>>Course ID</option>
      <option value="CourseName" <%= sort === 'CourseName' ? 'selected' : '' %>>Course Name</option>
      <option value="CoursePrice" <%= sort === 'CoursePrice' ? 'selected' : '' %>>Course Price</option>
      <option value="CourseStartDate" <%= sort === 'CourseStartDate' ? 'selected' : '' %>>Course Start Date</option>
      <option value="CourseEndDate" <%= sort === 'CourseEndDate' ? 'selected' : '' %>>Course End Date</option>
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>CourseID</th>
        <th>CourseName</th>
        <th>CourseStatus</th>
        <th>CourseDescription</th>
        <th>CoursePrice</th>
        <th>CourseImage</th>
        <th>CourseStartDate</th>
        <th>CourseEndDate</th>
        <th>CategoryID</th>
      </tr>
    </thead>
    <tbody>
      <% courses.forEach(course => { %>
        <tr>
          <td><%= course.CourseID %></td>
          <td><%= course.CourseName %></td>
          <td><%= course.CourseStatus %></td>
          <td><%= course.CourseDescription %></td>
          <td><%= course.CoursePrice %></td>
          <td><%= course.CourseImage %></td>
          <td><%= course.CourseStartDate %></td>
          <td><%= course.CourseEndDate %></td>
          <td><%= course.CategoryID %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>