<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Chapter</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Chapter</h1>
  <button onclick="window.location.href='/'">Go Back</button>
  <form method="GET" action="/chapter" id="sortForm">
    <input type="text" name="search" placeholder="Search by Chapter Name" value="<%= search %>">
    <select name="sort" onchange="document.getElementById('sortForm').submit()">
      <option value="ChapterName" <%= sort === 'ChapterName' ? 'selected' : '' %>>Chapter Name</option>
      <option value="CourseID" <%= sort === 'CourseID' ? 'selected' : '' %>>Course ID</option>
      <!-- Add more sort options if needed -->
    </select>
    <button type="submit">Search</button>
  </form>
  <table>
    <thead>
      <tr>
        <th>ChapterName</th>
        <th>CourseID</th>
        <!-- Add more columns if needed -->
      </tr>
    </thead>
    <tbody>
      <% chapters.forEach(chapter => { %>
        <tr>
          <td><%= chapter.ChapterName %></td>
          <td><%= chapter.CourseID %></td>
          <!-- Add more columns if needed -->
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>